<Page
    x:Class="App1.Views.ListDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:App1.Properties"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Style="{DynamicResource MahApps.Styles.Page}"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="ItemTemplate">
            <StackPanel Margin="{StaticResource SmallLeftMargin}">
                <TextBlock Style="{StaticResource ListTitleStyle}" Text="{Binding Name}" />
                <TextBlock
                    Style="{StaticResource ListSubTitleStyle}"
                    Text="{Binding Description}"
                    TextTrimming="CharacterEllipsis" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="DetailTemplate">
            <ScrollViewer Name="ForegroundElement" IsTabStop="True">
                <StackPanel Margin="{StaticResource MediumLeftTopRightBottomMargin}" HorizontalAlignment="Left">
                    <TextBlock Style="{StaticResource PageTitleStyle}" Text="{Binding Name}" />
                    <TextBlock
                        Margin="{StaticResource SmallTopMargin}"
                        Style="{StaticResource BodyTextStyle}"
                        Text="{Binding Description}"
                        TextWrapping="Wrap" />
                    <StackPanel Margin="{StaticResource SmallTopMargin}" Orientation="Horizontal">
                        <TextBlock Style="{StaticResource SubtitleTextStyle}" Text="Source:" />
                        <TextBlock
                            Margin="{StaticResource SmallLeftMargin}"
                            Style="{StaticResource BodyTextStyle}"
                            Text="{Binding SourceUrl}" />
                    </StackPanel>
                    <StackPanel Margin="{StaticResource SmallTopMargin}" Orientation="Horizontal">
                        <TextBlock Style="{StaticResource SubtitleTextStyle}" Text="Rating" />
                        <TextBlock
                            Margin="{StaticResource SmallLeftMargin}"
                            Style="{StaticResource BodyTextStyle}"
                            Text="{Binding Rating}" />
                    </StackPanel>
                    <StackPanel Margin="{StaticResource SmallTopMargin}" Orientation="Horizontal">
                        <TextBlock Style="{StaticResource SubtitleTextStyle}" Text="Risk" />
                        <TextBlock
                            Margin="{StaticResource SmallLeftMargin}"
                            Style="{StaticResource BodyTextStyle}"
                            Text="{Binding Risk}" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*"
                MinWidth="180"
                MaxWidth="300" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
                Margin="{StaticResource MediumLeftMargin}"
                Style="{StaticResource PageTitleStyle}"
                Text="{x:Static properties:Resources.ListDetailsPageTitle}" />
            <ListView
                Grid.Row="1"
                ItemTemplate="{StaticResource ItemTemplate}"
                ItemsSource="{Binding Scripts}"
                SelectedItem="{Binding Selected, Mode=TwoWay}" />
        </Grid>
        <Button
            Grid.Column="1"
            Margin="417,402,18,18"
            Content="Prepare Script"
            Click="OnPrepareScript" />
        <ContentControl
            Grid.Column="1"
            ContentTemplate="{StaticResource DetailTemplate}"
            IsTabStop="False" />
        <Button
            Grid.Column="1"
            Margin="304,402,131,18"
            Content="View Full Script"
            Click="OnViewScript" />
    </Grid>
</Page>
